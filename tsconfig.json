{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ]
}